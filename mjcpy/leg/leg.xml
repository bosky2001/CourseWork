<mujoco>
	<visual>
		<headlight ambient="0.5 0.5 0.5" />
	</visual>
	<option timestep="0.001" integrator="RK4" >
		<flag sensornoise="enable" energy="enable" contact="enable" />
	</option>
	<worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		<geom type="plane" size="2 1 0.1" rgba=".9 0 0 1"/>
		<body pos="0 0 2.5" euler="0 180 0">
			<!-- <joint name="x" type="slide" pos="0 0 -0.5"  axis="1 0 0" /> -->
			
			<joint name="z"  type="slide"  axis="0 0 1" />
				<geom name="torso" type="sphere" size="0.13" pos="0 0 -0.5" rgba="0 .8 .8 1" mass="5"/>
			
			<body name = "thigh"  pos="0 0 0">
				<joint name="hip" type="hinge" axis = "0 -1 0"  pos="0 0 -0.5"/>
					<geom name="upper" type="cylinder" size="0.05 0.5" rgba="0.5 .5 0.5 1" mass=".5"/>
				
				<body pos="0 0 1" euler="0 0 0">
					<joint name="knee" type="hinge" axis = "0 -1 0" pos="0 0 -0.5"/>
						<geom name="lower" type="cylinder" size="0.05 0.5" rgba="0.7 0.7 .7 1" mass=".5"/>
						<body pos="0 0 0.5" name="foot">
							<geom name="toe" type="sphere" size="0.07"  rgba="0.9 0.9 0 1" mass="0.1"/>
						</body>
				</body>
			</body>
		</body>
	</worldbody>
	
	<actuator>
		<motor joint="hip" name="Thigh Torque"/>
		<motor joint="knee" name="Knee Torque"/>
		<!-- <position name="pservo-hip" joint="thigh" kp="0"/>
		<velocity name="vservo-hip" joint="thigh" kv="1"/>
		<position name="pservo-knee" joint="knee" kp="0"/>
		<velocity name="vservo-knee" joint="knee" kv="1"/> -->
	</actuator>
</mujoco>